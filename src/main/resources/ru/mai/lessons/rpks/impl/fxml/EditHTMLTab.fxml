<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #252525;" stylesheets="@../css/application.css" type="StackPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <top>
               <HBox alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER">
                  <children>
                     <FontIcon iconColor="WHITE" iconLiteral="fa-code" iconSize="20" selectionEnd="0">
                        <HBox.margin>
                           <Insets bottom="5.0" right="10.0" top="5.0" />
                        </HBox.margin>
                     </FontIcon>
                     <Label text="Редактирование HTML страниц" textFill="WHITE">
                        <font>
                           <Font size="20.0" />
                        </font>
                        <HBox.margin>
                           <Insets bottom="5.0" top="2.0" />
                        </HBox.margin>
                     </Label>
                  </children>
                  <BorderPane.margin>
                     <Insets top="10.0" />
                  </BorderPane.margin>
               </HBox>
            </top>
            <bottom>
            <AnchorPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <JFXButton fx:id="viewChangesBtn" prefWidth="200.0" style="-fx-background-radius: 10px;" text="Загрузить изменения" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fa-eye" iconSize="15" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="saveBtn" style="-fx-background-radius: 10px;" text="Сохранить" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fa-save" iconSize="15" />
                     </graphic>
                  </JFXButton>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </AnchorPane>
            </bottom>
         <left>
            <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </TextArea>
         </left>
         <center>
            <WebView fx:id="webView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </WebView>
         </center>
        </BorderPane>

    </children>
</fx:root>
