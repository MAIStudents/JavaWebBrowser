<fx:root prefHeight="448.0" prefWidth="667.0" style="-fx-background-color: #101010;" stylesheets="@../css/application.css" type="StackPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox fx:id="errorPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0" style="-fx-background-color: rgb(255,255,255,0.9);" visible="false">
            <children>
                <Label styleClass="sideBarSectionLabel" text="Server not found" textAlignment="CENTER" wrapText="true" />
                <TextArea editable="false" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" mouseTransparent="true" text="&#10;1.Check the address for typing errors such as ww.example.com instead of www.example.com&#10;&#10;2.If you are unable to load any pages, check your computer’s network connection.&#10;&#10;" wrapText="true">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </VBox.margin>
                </TextArea>
                <JFXButton fx:id="tryAgain" buttonType="RAISED" contentDisplay="RIGHT" ripplerFill="#a30cfa" styleClass="jfx-button-dark-white-selection" text="Try Again">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <graphic>
                        <ProgressIndicator fx:id="tryAgainIndicator" styleClass="dropbox-progress-indicator" visible="false" />
                    </graphic>
                </JFXButton>
            </children>
        </VBox>
        <BorderPane fx:id="borderPane" style="-fx-background-color: #101010;">
            <top>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="667.0" spacing="5.0" BorderPane.alignment="CENTER">
                    <children>
                        <JFXButton fx:id="backwardButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" styleClass="jfx-button4" text=" ">
                            <graphic>
                                <FontIcon iconColor="WHITE" iconLiteral="fa-arrow-left" iconSize="20" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="forwardButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" layoutX="10.0" layoutY="15.0" styleClass="jfx-button4" text=" ">
                            <graphic>
                                <FontIcon iconColor="WHITE" iconLiteral="fa-arrow-right" iconSize="20" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="reloadButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" layoutX="10.0" layoutY="15.0" styleClass="jfx-button4" text=" ">
                            <graphic>
                                <FontIcon iconColor="WHITE" iconLiteral="fa-refresh" iconSize="20" />
                            </graphic>
                        </JFXButton>
                        <TextField fx:id="searchBar" maxHeight="30.0" promptText="Поиск..." style="-fx-font-weight: bold;" styleClass="dark-text-area" HBox.hgrow="ALWAYS" />
                        <JFXButton fx:id="goButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" layoutX="156.0" layoutY="15.0" styleClass="jfx-button4" text=" ">
                            <graphic>
                                <FontIcon iconColor="WHITE" iconLiteral="fa-search" iconSize="20" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="toFavouritesButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" layoutX="176.0" layoutY="15.0" styleClass="jfx-button4" text=" ">
                            <graphic>
                                <FontIcon fx:id="toFavouritesFontIcon" iconColor="WHITE" iconLiteral="fa-star" iconSize="20" />
                            </graphic>
                        </JFXButton>
                        <MenuButton contentDisplay="GRAPHIC_ONLY" maxHeight="30.0" minHeight="-Infinity" mnemonicParsing="false" prefHeight="30.0" style="-fx-background-radius: 0;" styleClass="dark-menu-button">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <items>
                        <MenuItem fx:id="historyMenuItem" mnemonicParsing="false" text="История" />
                        <MenuItem fx:id="favouritesMenuItem" mnemonicParsing="false" text="Избранное" />
                        <CheckMenuItem fx:id="collectHistoryThisPageCheckedMenuItem" mnemonicParsing="false" text="Не отслеживать эту страницу" />
                        <Menu mnemonicParsing="false" text="Сохранить страницу...">
                          <items>
                              <MenuItem fx:id="downloadPageMenuItem" mnemonicParsing="false" text="как HTML" />
                            <MenuItem fx:id="downloadPageZipMenuItem" mnemonicParsing="false" text="как ZIP" />
                          </items>
                        </Menu>
                        <MenuItem fx:id="viewHTMLMenuItem" mnemonicParsing="false" text="Смотреть html-код" />
                        <MenuItem fx:id="editHTMLMenuItem" mnemonicParsing="false" text="Редактировать html-код" />
                        <MenuItem fx:id="newHTMLMenuItem" mnemonicParsing="false" text="Новая html-страница" />
                            </items>
                            <graphic>
                                <FontIcon iconColor="WHITE" iconLiteral="fa-cog" iconSize="20" />
                            </graphic>
                        </MenuButton>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="3.0" left="5.0" right="5.0" />
                    </BorderPane.margin>
                </HBox>
            </top>
            <center>
                <WebView fx:id="webView" minHeight="-1.0" minWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" BorderPane.alignment="CENTER">
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor></WebView>
            </center>
        </BorderPane>
    </children>
    <padding>
        <Insets top="5.0" />
    </padding>
</fx:root>
